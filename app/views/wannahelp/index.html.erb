  <div class="row-fluid">
    <div class="span2"></div>
    <h1>Wanna Help?</h1>
    <div class="span8 no-box-holder">
      <div class="row-fluid">
        <div class="span12 border-left">
          <h4>Projects needing help:</h4>
          <ul class="ul-clean">
            <%- @repos.each do |repo| %>
              <%= form_tag(user_wannahelp_path(current_user, repo), method: :put) do %>
                <li>
                  <%= hidden_field_tag "github_id", repo[:github_id] %>
                  <%= submit_tag "", class: get_css_status(current_user, repo) %>
                  <%= link_to repo.name, "#{repo.github_url}" %>
                  &nbsp; - &nbsp; <%= link_to "Author:", "https://github.com/#{repo.user.github_id}" %>

                  <br/> <strong>Description:</strong> <%= repo.description %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="span2"></div>
  </div>